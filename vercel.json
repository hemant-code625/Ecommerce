{
    "version": 2,
    "builds": [
      {
        "src": "server.js",  "use": "@vercel/node",
        "config": {
          "command": "json-server --watch ./src/app/data.json --host 0.0.0.0 --cors --port $PORT"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",  "dest": "/api/:splat"  }
    ]
  }
  